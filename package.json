{
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.4.1",
    "electron-rebuild": "^3.2.9",
    "wait-on": "^9.0.4"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2"
  },
  "scripts": {
    "dev:renderer": "npm --prefix renderer run dev",
    "dev:electron": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron ./electron/main.js",
    "dev": "concurrently -k \"npm run dev:renderer\" \"wait-on http://localhost:5173 && npm run dev:electron\"",
    "build:renderer": "npm --prefix renderer run build",
    "start": "npm run build:renderer && electron ./electron/main.js",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-rebuild"
  }
}